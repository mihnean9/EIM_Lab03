<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    android:orientation="vertical"
    tools:context=".PhoneDialerActivity"
    android:layout_gravity="center_horizontal">


    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_gravity="center_horizontal"
        />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="5"
        android:layout_gravity="center_horizontal">


        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNumber"
            android:layout_marginRight="10dp"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNumber"
            android:text="2"
            android:layout_marginRight="10dp"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNumber"
            android:layout_marginRight="10dp"
            android:text="3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNumber"
            android:layout_marginRight="10dp"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNumber"
            android:text="5"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNumber"
            android:text="6" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNumber"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNumber"
            android:text="8"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNumber"
            android:text="9" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:onClick="addNumber"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:id="@+id/imageButtonCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call"
            android:onClick="startCall"
            android:layout_gravity="start"
            />

        <Button
            android:id="@+id/buttonSpecial1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNumber"
            android:text="*" />




        <ImageButton
            android:id="@+id/imageButtonBackspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="backspace"
            android:src="@drawable/backspace"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/buttonSpecial2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNumber"
            android:text="#" />

        <ImageButton
            android:id="@+id/imageButtonHangup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_gravity="end"
            android:src="@drawable/hangup" />

    </GridLayout>

</androidx.appcompat.widget.LinearLayoutCompat>